#include <iostream>
using namespace std;

class basic{

    public:
        int v, vx;
        string w, wx;
        float y, yx;
    void guruin(){
        cout<<"Masukkan NISN guru: "<<endl; cin>>v;
        cout<<"Masukkan Nama guru: "<<endl; cin>>w;
        cout<<"Masukkan Penilaian guru: "<<endl; cin>>y;
    }
    void guruout(){
        cout<<"NISN: "<<v<<endl;
        cout<<"Nama: "<<w<<endl;
        cout<<"penilaian: "<<y<<endl;
    }
    void muridin(){
        cout<<"Masukkan NISN murid: "<<endl; cin>>vx;
        cout<<"Masukkan Nama murid: "<<endl; cin>>wx;
        cout<<"Masukkan Penilaian murid: "<<endl; cin>>yx;
    }
    void muridout(){
        cout<<"NISN: "<<vx<<endl;
        cout<<"Nama: "<<wx<<endl;
        cout<<"penilaian: "<<yx<<endl;
    }   
};

int main(){
    int angka;
    cout<<"Masukkan angka [1] untuk guru atau [2] untuk siswa: "<<endl; cin>>angka;
    if(angka == 1){
        basic ibuini;
        ibuini.guruin();
        ibuini.guruout();
    }
    else if(angka == 2){
        basic ibuini;
        ibuini.muridin();
        ibuini.muridout();
    }
}

